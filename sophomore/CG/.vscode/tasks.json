{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                // "-g", "${fileDirname}/*.cpp",
                "-g", "${fileDirname}/main.cpp",
                // "-g", "${workspaceFolder}/Libs/*.cpp",
                "/Users/kiokize/Desktop/kmitl/sophomore/CG/opengl/Libs/*.cpp",

                "-L","/opt/homebrew/Cellar/glew/2.2.0_1/lib",
                "-L","/opt/homebrew/Cellar/glfw/3.3.9/lib",


                "-l","glew",
                "-l","glfw",
                "-framework","Cocoa",
                "-framework","OpenGL",
                "-framework","IOKit",
                "-framework","CoreVideo",
                "-std=c++17",
                "-o", "${fileDirname}/${fileBasenameNoExtension}"


